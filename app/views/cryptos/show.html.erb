<% for x in @show_crypto %>
        
      <% if @crypto.symbol.upcase == x["symbol"] %>
          
          <% crypto_name = x["name"] %> 
          <% crypto_price = x["price_usd"] %>
          <% crypto_rank = x["rank"] %>
          
          
      <%end%>
        
<%end%>


<div class="col-md-6 col-md-offset-3">
<div class="panel panel-default">
 
  <div class="panel-body">
   <p>
    <h1>
    <%= @crypto.symbol.upcase %>
    </h1>
  </p>
  <strong>Name : </strong><%= crypto_name %><br> 
  <strong>Price : </strong> <%= crypto_price %><br> 
  <strong>Rank : </strong> <%= crypto_rank %><br> 
  <p>
    <strong>Cost per:</strong>
    <%= @crypto.cost_per %>
  </p>
  <p>
    <strong>Amount owned:</strong>
    <%= @crypto.amount_owned %>
  </p>
  </div>
  <div class="panel-footer"><%= link_to 'Edit', edit_crypto_path(@crypto) %> | <%= link_to 'Delete', crypto_path(@crypto), method: :delete, data: { confirm: 'Are you sure?' } %> | <%= link_to 'Back', cryptos_path %> </div>
  
</div>


